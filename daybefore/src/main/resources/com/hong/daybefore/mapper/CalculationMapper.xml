<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hong.daybefore.mapper.CalculationMapper">

    <!-- 목록 -->
    <select id="list" resultType="Calculation">
        SELECT *
        FROM calculation
    </select>

    <!-- 조회 -->
    <select id="select" resultType="Calculation">
        SELECT *
        FROM calculation
        WHERE calculation_id = #{calculationId}
    </select>

    <!-- 등록 -->
    <insert id="insert">
        INSERT INTO calculation (name)
        VALUES (#{name})
    </insert>

    <!-- 수정 -->
    <update id="update">
        UPDATE calculation
            SET name = #{name}
        WHERE calculation_id = #{calculationId}
    </update>

    <!-- 삭제 -->
    <delete id="delete">
        DELETE FROM calculation
        WHERE calculation_id = #{calculationId}
    </delete>

</mapper>
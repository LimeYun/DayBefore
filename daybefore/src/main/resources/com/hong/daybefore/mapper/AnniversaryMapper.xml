<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hong.daybefore.mapper.AnniversaryMapper">

    <!-- 목록 -->
    <select id="list" resultType="Anniversary">
        SELECT *
        FROM anniversary
    </select>

    <!-- 조회 -->
    <select id="select" resultType="Anniversary">
        SELECT *
        FROM anniversary
        WHERE anniversary_id = #{anniversaryId}
    </select>

    <!-- 등록 -->
    <insert id="insert">
        INSERT INTO anniversary (calculation_id, name)
        VALUES (#{calculationId}, #{name})
    </insert>

    <!-- 수정 -->
    <update id="update">
        UPDATE anniversary
            SET calculation_id = #{calculationId},
                name = #{name}
        WHERE anniversary_id = #{anniversaryId}
    </update>

    <!-- 삭제 -->
    <delete id="delete">
        DELETE FROM anniversary
        WHERE anniversary_id = #{anniversaryId}
    </delete>

</mapper>